<!doctype html>
<html>
  <head>
    <meta lang="en" />
    <meta charset="utf-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    <meta name="author" value="Miles Matthias" />
    <meta name="description" value="I'm an author and developer specializing in web and mobile apps." />
    <meta name="viewport" value="width=device-width, initial-scale=1" />

    <title>Miles Matthias<%= ' | ' + current_article.title unless current_article.nil? %></title>
    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>

    <%= stylesheet_link_tag "main" %>
  </head>
  <body>

    <header>
      <%= partial "layouts/desktop_header" %>
      <%= partial "layouts/mobile_header" %>
    </header>
    
    <div id="main" role="main">
      <%= yield %>
    </div>

  </body>
</html>
